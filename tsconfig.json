{
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "node18",
        "moduleResolution": "Node16",
        "outDir": "js",
        "resolveJsonModule": true,
        "declaration": true
